<UserControl x:Class="ExtensionUI.ToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="MyToolWindow">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="20">
            <TextBox Name="txt_folderPath" Text="{Binding PickedFolderPath,  Mode=TwoWay}" IsReadOnly="true" Width="300" FontSize="12"/>
            <Button Name="btn_browse" Click="btn_browse_Click" FontSize="12" Margin="20, 0" Padding="10,0">Browse</Button>
        </StackPanel>
    </Grid>
</UserControl>
